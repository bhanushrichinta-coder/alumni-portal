{
	"info": {
		"_postman_id": "auth-module-001",
		"name": "01 - Authentication API",
		"description": "Authentication endpoints for login, register, token management, and template settings",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set(\"access_token\", response.access_token);",
							"    pm.environment.set(\"refresh_token\", response.refresh_token);",
							"    pm.environment.set(\"token_type\", response.token_type);",
							"    console.log(\"Tokens saved to environment\");",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"superadmin\",\n    \"password\": \"superadmin123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"auth",
						"login"
					]
				},
				"description": "Login with username or email. Tokens are automatically saved to environment variables."
			},
			"response": []
		},
